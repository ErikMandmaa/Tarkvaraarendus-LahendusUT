def paarissumma(n): # Recursive function to calculate the sum of even numbers up to n
    if n == 0: # Base case
        return 0 # Sum is 0 when n is 0
    elif n == 1: # Base case for n = 1
        return 0 # Sum is 0 when n is 1
    elif n % 2 == 0: # If n is even
        return n + paarissumma(n - 2) # Add n to the sum of even numbers up to n-2
    else: # If n is odd
        return paarissumma(n - 1) # Call the function with n-1 to find the sum of even numbers